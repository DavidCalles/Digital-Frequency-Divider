entity DFF is
   port
   (
      clk 	: in std_logic;

      rst 	: in std_logic;
      pre 	: in std_logic;
      en  	: in std_logic;
      
      d 		: in std_logic;

      q 		: out std_logic);
   
end entity DFF;
 
architecture Behavioral of DFF is

begin
   process (clk) is
   begin
      if rising_edge(clk) then  
         if (rst='1') then   
            q <= '0';
         elsif (pre='1') then
            q <= '1';
         elsif (en='1') then
            if (d ='1') then
             q <= '1';
         elsif (d ='0') then 
             q<= '0';
            end if;
         end if;
      end if;
   end process;
	
end architecture Behavioral;